<h1>New document</h1>

<% form_for(@document) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= render :partial => 'blocks/new_block', :object => Block.new(:item => DocumentItem::Paragraph.new) %>

<%= link_to 'Back', documents_path %>
